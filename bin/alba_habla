#!/usr/bin/env ruby
require 'io/console'
require 'alba_habla'

cli_options = AlbaHabla::Cli.parse(ARGV)
ah = AlbaHabla::Commands.new(cli_options[:book_path])

command = nil
command_history = []

# Main program loop
while command != 'bye'
  print 'What shall I say? '
  command = gets.chomp
  command_history.push command
  ah.process_command(command)
end

puts 'COMMAND HISTORY'
command_history.each { |h| puts h }
